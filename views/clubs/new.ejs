<% layout('layouts/boilerplate')%>
<h1 class="text-center">New Club</h1>
<div class="col-6 offset-3">  
<form action="/clubs" method="POST">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="club[title]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="club[location]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image URL</label>
            <input class="form-control" type="text" id="location" name="club[image]">
        </div>

        <div class="mb-3">
            <label class="form-label" for="price">Club Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="club[price]">
            </div>

        </div>

        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="club[description]"></textarea>
        </div>
        <div class="mb-3">
        <button class="btn btn-success">Add Club</button>
    </div>
    </form>
    <a href="/clubs">All CLubs</a>
</div> 
  
